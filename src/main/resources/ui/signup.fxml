<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@css/signup.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.media.groove.controller.SignupController">
    <VBox layoutX="310.0" layoutY="163.0">
        <Label fx:id="lblName" prefHeight="17.0" prefWidth="50.0" styleClass="input-label" text="Name*" />
        <TextField id="name" fx:id="name" styleClass="input" />
    </VBox>
    <VBox layoutX="310.0" layoutY="235.0">
        <Label fx:id="lblLastName" prefHeight="17.0" prefWidth="76.0" text="Last name*" />
        <TextField fx:id="lastName" styleClass="input" />
    </VBox>
    <VBox layoutX="310.0" layoutY="300.0">
        <Label fx:id="lblUsername" prefHeight="17.0" prefWidth="76.0" text="Username*" />
        <TextField fx:id="username" styleClass="input" />
        <Label fx:id="lblUsernameNotAvailable" styleClass="error-text" text="This username isn't available" visible="false" />
    </VBox>
    <VBox layoutX="309.0" layoutY="370.0">
        <Label fx:id="lblPassword" prefHeight="17.0" prefWidth="76.0" text="Password*" />
        <PasswordField fx:id="password" styleClass="input" />
    </VBox>
    <Button fx:id="signupButton" layoutX="311.0" layoutY="514.0" mnemonicParsing="false" onAction="#signUp" prefHeight="33.0" prefWidth="149.0" styleClass="signup-button" text="Sign up" />
    <Label layoutX="250.0" layoutY="78.0" prefHeight="46.0" prefWidth="300.0" styleClass="signup-title" text="Create your account" />
    <VBox layoutX="309.0" layoutY="438.0">
        <Label fx:id="lblPasswordConfirmation" prefHeight="18.0" prefWidth="150.0" text="Confirm your password*" />
        <PasswordField fx:id="passwordConfirmation" styleClass="input" />
    </VBox>
   <Label fx:id="lblAccountCreationError" styleClass="error-text" layoutX="187.0" layoutY="553.0" prefHeight="33.0" prefWidth="395.0" text="There was a problem while trying to create your account. Please try again." visible="false" />
</AnchorPane>
