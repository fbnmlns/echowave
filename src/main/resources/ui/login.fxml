<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@css/signup.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.media.groove.controller.LoginController">
   <children>
      <VBox layoutX="310.0" layoutY="163.0" />
      <VBox layoutX="310.0" layoutY="235.0" />
      <VBox layoutX="310.0" layoutY="191.0">
         <children>
            <Label fx:id="lblUsername" prefHeight="17.0" prefWidth="76.0" text="Username*" />
            <TextField fx:id="username" styleClass="input" />
         </children>
      </VBox>
      <VBox layoutX="309.0" layoutY="256.0">
         <children>
            <Label fx:id="lblPassword" prefHeight="17.0" prefWidth="76.0" text="Password*" />
            <PasswordField fx:id="password" styleClass="input" />
         </children>
      </VBox>
      <Button fx:id="logInButton" layoutX="311.0" layoutY="514.0" mnemonicParsing="false" onAction="#logIn" prefHeight="33.0" prefWidth="149.0" styleClass="signup-button" text="Log in" />
      <Label layoutX="223.0" layoutY="78.0" prefHeight="46.0" prefWidth="355.0" styleClass="signup-title" text="Good to have you here!" />
      <ProgressBar fx:id="spinner" layoutY="-9.0" prefHeight="18.0" prefWidth="800.0" styleClass="custom-spinner" visible="false" />
      <Label fx:id="lblAccountCreationError" layoutX="187.0" layoutY="553.0" prefHeight="33.0" prefWidth="395.0" styleClass="error-text" text="There was a problem while trying to create your account. Please try again." visible="false" />
   </children>
</AnchorPane>
